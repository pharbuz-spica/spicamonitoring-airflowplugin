{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "configui.json",
    "type": "object",
    "$$target": "ConfigUI",
    "title": "Config UI section",
    "create_snippet": true,
    "properties": {
        "displayName": {
            "description": "Human readable plugin name. This name is displayed in web UI at **Settings > Monitored technologies > Custom plugins** once the plugin is uploaded.",
            "type": "string",
            "minLength": 1
        },
        "properties": {
            "type": "array",
            "create_snippet": true,
            "title": "ConfigUI properties",            
            "items": {
                "type": "object",
                "required": ["key", "displayName"],
                "properties": {
                    "key": {
                        "description": "Config property key, needs to match key from configUI properties section",
                        "type": "string",
                        "minLength": 1
                    },
                    "displayName": {
                        "description": "Human readable property name.",
                        "type": "string",
                        "minLength": 1
                    },
                    "displayOrder": {
                        "description": "Determines display order on plugin configuration tile.",
                        "type": "integer",
                        "minimum": 1
                    },
                    "displayHint": {
                        "description": "Hint displayed in the tool-tip.",
                        "type": "string"
                    }
                }
            }
        }
    }
}