{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Source metadata section",
    "$id": "source.json",
    "create_snippet": true,
    "required": ["package", "className"],
    "properties": {
        "package": {
            "type": "string",
            "minLenght" : 1,
            "description": "Python package that has plugin class"
        },
        "className": {
            "type": "string",
            "minLenght" : 1,
            "description": "Name of plugins main python class. Must inherit from BasePlugin."
        },
        "install_requires": {
            "type": "array",
            "description": "Relates to Python packaging, see: [https://docs.python.org/3.5/distutils/setupscript.html](https://docs.python.org/3.5/distutils/setupscript.html)",
            "items": {"type": "string"}
        },
        "packages": {
            "type": "array",
            "description": "Relates to Python packaging, see: [https://docs.python.org/3.5/distutils/setupscript.html](https://docs.python.org/3.5/distutils/setupscript.html)",
            "items": {"type": "string"}
        },
        "package_data": {
            "type": "array",
            "description": "Relates to Python packaging, see: [https://docs.python.org/3.5/distutils/setupscript.html](https://docs.python.org/3.5/distutils/setupscript.html)",
            "items": {"type": "string"}
        },
        "modules": {
            "type": "array",
            "description": "Relates to Python packaging, see: [https://docs.python.org/3.5/distutils/setupscript.html](https://docs.python.org/3.5/distutils/setupscript.html)",
            "items": {"type": "string"}
        }        
    }
}
