
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "chart.json",
    "title": "Chart",
    "type": "array",
    "$$target": "Chart",
    "create_snippet": true,
    "definitions": {
        "series_types": {
            "$$target": "series_types",
            "title": "Series type",
            "description": "How will given series render in Dynatrace UI",
            "type": "string",
            "enum": ["LINE", "AREA", "BAR",
            "line", "area", "bar",
            "Line", "Area", "Bar"]
        }
    },
    "items": {
        "type": "object",
        "required": ["title", "group", "series"],
        "properties": {
            "title": {
                "type": "string",
                "minLength": 1
            },
            "description": {
                "type": "string",
                "minLength": 1
            },
            "group": {
                "type": "string",
                "minLength": 1
            },
            "series": {
                "type": "array",
                "minItems": 1,
                "create_snippet": true,
                "items": {
                    "type": "object",
                    "required": ["key"],
                    "properties": {
                        "key": {
                            "type": "string",
                            "minLength": 1
                        },
                        "color": {
                            "type": "string"
                        },
                        "aggeragation": {
                            "$ref": "ui.json#definitions/aggregation_type"
                        },
                        "mergeaggregation": {
                            "$ref": "ui.json#definitions/mergeaggregation_type"
                        },
                        "dimensions": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "type": "string",
                                "minLength": 1
                            }
                        },
                        "seriestype": {
                            "$ref": "#/definitions/series_types"
                        },
                        "stacked": {
                            "type": "boolean"
                        },
                        "rightaxis": {
                            "type": "boolean"
                        },
                        "displayname": {
                            "type": "string",
                            "minLength": 1
                        },
                        "unit": {
                            "type": "string",
                            "minLength": 1
                        }
                    }
                }
            }
        }
    }
}