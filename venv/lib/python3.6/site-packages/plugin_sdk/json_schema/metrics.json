
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "metrics.json",
    "$$target": "metrics.json",
    "title": "Metrics section",
    "type": "array",
    "uniqueItems": true,
    "definitions": {
        "entity_types": {
            "title": "Metric entity",
            "$$target": "entity_type",
            "type": "string",
            "enum": ["PROCESS_GROUP_INSTANCE", "PROCESS_GROUP", "HOST"]
            }
    },
    "items": {
        "oneOf": [{
                "type": "object",
                "required": ["timeseries"],
                "properties": {
                    "timeseries": {
                        "type": "object",
                        "title": "Timeseries",
                        "description": "Timeseries definition",
                        "required": [
                            "key",
                            "unit",
                            "displayname"
                        ],
                        "properties": {
                            "key": {
                                "description": "Metric name. Must be unique within this plugin.",
                                "$ref": "name.json"
                            },
                            "unit": {
                                "description": "Metric unit. See the link for available units.",
                                "$ref": "units.json"
                            },

                            "dimensions": {
                                "description": "Dimensions are used to provide 1 metric per plugin ObjectName key property value. For example, version, service, or database. Dimension \"rx_pid\" at index 0 means the system process ID (PID).",
                                "type": "array",
                                "items": {
                                    "$ref": "name.json"
                                }
                            },
                            "displayname": {
                                "description": "The name under which the metric will be displayed.",
                                "type": "string",
                                "minLength": 1
                            },
                            "topx": {
                                "description": "Optional information on how topping should work",
                                "type": "integer",
                                "min": 0,
                                "max": 100
                            }
                        }
                    },
                    "entity": {
                        "$ref": "#/definitions/entity_types"
                    },
                    "alert_settings": {
                    
                        "$ref": "generic_alert.json"
                    },
                    "source": {
                        "type": "object",
                        "description": "Can be used to specify any valid JSON structure, to be processed by the Plugin."
                        }
                }
            },
            {
                "type": "object",
                "required": ["statetimeseries"],
                "properties": {
                    "statetimeseries": {
                        "type": "object",
                        "title": "Statetimeseries",
                        "description": "Statetimeseries definition",
                        "required": [
                            "key",
                            "states",
                            "displayname"
                        ],
                        "properties": {
                            "key": {
                                "$ref": "name.json"
                            },
                            "dimensions": {
                                "type": "array",
                                "items": {
                                    "$ref": "name.json"
                                }
                            },
                            "states": {
                                "type": "array",
                                "items": {
                                    "$ref": "name.json"
                                }
                            },
                            "displayname": {
                                "type": "string",
                                "minLength": 1
                            },
                            "source": {
                                "type": "object",
                                "description": "Can be used to specify any valid JSON structure, to be processed by the Plugin."
                                }                            
                        }
                    },
                    "entity": {
                        "$ref": "#/definitions/entity_types"
                    },
                    "alert_settings": {
                        "$ref": "generic_alert.json"
                    }
                }
            }
        ]
    }
}