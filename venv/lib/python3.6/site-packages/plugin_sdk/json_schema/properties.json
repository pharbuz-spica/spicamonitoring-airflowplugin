{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Plugin properties",
    "$$target": "properties.json",
    "type": "array",
    "$id": "properties.json",
    "create_snippet": true,
    "definitions": {
        "property_type": {
            "title": "Plugin property type",
            "$$target": "property_type",
            "type": "string",
            "enum": ["STRING", "BOOLEAN", "INTEGER", "FLOAT", "PASSWORD", "JSON", "TEXTAREA", "DROPDOWN",
            "string", "boolean", "integer", "float", "password", "json", "textarea", "dropdown",
            "String", "Boolean", "Integer", "Float", "Password", "Json", "Textarea", "Dropdown"]
        }
    },
    "items": {
        "type": "object",
        "required": ["key", "type"],
        "properties": {
            "key": {
                "description": "Property key. Must be unique within this plugin and must match the key from configUI properties.",
                "type": "string",
                "minLength": 1
            },
            "type": {
                "description": "For 'PASSWORD' stars will be displayed while typing.",
                "$ref": "#definitions/property_type"
            },
            "defaultValue": {
                "description": "Default value.",
                "type": ["string", "integer", "boolean"]
            }
        }
    }
}